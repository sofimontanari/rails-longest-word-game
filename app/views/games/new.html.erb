<% @letters.each do |letter| %>
  <%= letter %>
<% end %>
<% @time_before = Time.now %>
<form action="/score" method="post" data-turbo="false">
  <label for="word" class="form-label">What is your longest word?</label>
  <input type="text" name="word" id= "word" placeholder="Type your word">
  <%= hidden_field_tag :time_before, Time.now %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit"text="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
